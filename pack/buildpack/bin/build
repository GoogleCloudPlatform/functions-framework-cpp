set -eu

echo "---> Functions Framework C++ Buildpack"

layers="$1"

echo "-----> Setup vcpkg cache"
export VCPKG_DEFAULT_BINARY_CACHE=${layers}/vcpkg
export VCPKG_OVERLAY_PORTS=/layers/cpp/gcf/vcpkg-overlays
if [[ ! -d "${layers}/vcpkg" ]]; then
  echo "-----> Restore cache from build image"
  cp -r /layers/cpp/vcpkg-cache "${layers}/vcpkg"
fi
cat > "${layers}/vcpkg.toml" <<EOL
build = true
cache = true
launch = false
EOL

echo "-----> Setup build directory"
cp -r /layers/cpp/gcf/cmake /var/tmp/source
cp -r /workspace /var/tmp/source/application
test -r /workspace/vcpkg.json && cp /workspace/vcpkg.json /var/tmp/source
/layers/cpp/gcf/generate-wrapper.sh "${TARGET_FUNCTION}" "${FUNCTION_SIGNATURE_TYPE:-http}" >/var/tmp/source/main.cc
echo "-----> Configure Function"
/layers/cpp/cmake/bin/cmake -S /var/tmp/source -B /var/tmp/build -GNinja \
           -DCMAKE_BUILD_TYPE=Release \
           -DCMAKE_INSTALL_PREFIX="${layers}/local" \
           -DCMAKE_TOOLCHAIN_FILE="/layers/cpp/vcpkg/scripts/buildsystems/vcpkg.cmake"
echo "-----> Compile and Install Function``"
/layers/cpp/cmake/bin/cmake --build /var/tmp/build --target install

cat > "${layers}/local.toml" <<EOL
launch = true
EOL

cat > "${layers}/launch.toml" <<EOL
[[processes]]
type = "web"
command = "${layers}/local/bin/function"
EOL
